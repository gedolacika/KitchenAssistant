<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/cardview_consumed_food_constarint_layout_inner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/cardview_consumed_food_recipe_image"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:scaleType="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.053"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@color/colorGray" />

            <TextView
                android:id="@+id/cardview_consumed_food_recipe_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="Name of food"
                android:textColor="#000"
                android:textSize="20dp"
                app:layout_constraintEnd_toStartOf="@+id/cardview_consumed_food_recipe_quantity_title"
                app:layout_constraintHorizontal_bias="0.037"
                app:layout_constraintStart_toEndOf="@+id/cardview_consumed_food_recipe_image"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/cardview_consumed_food_recipe_details_calorie_imge"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="88dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/calorie_icon" />

            <ImageView
                android:id="@+id/cardview_consumed_food_recipe_details_fat_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/cardview_consumed_food_recipe_details_fat"
                app:layout_constraintTop_toTopOf="@+id/cardview_consumed_food_recipe_details_calorie_imge"
                app:srcCompat="@drawable/fat_icon" />

            <ImageView
                android:id="@+id/cardview_consumed_food_recipe_details_protein_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/cardview_consumed_food_recipe_details_protein"
                app:layout_constraintTop_toTopOf="@+id/cardview_consumed_food_recipe_details_calorie_imge"
                app:srcCompat="@drawable/protein_icon" />

            <ImageView
                android:id="@+id/cardview_consumed_food_carbohydrate_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.17"
                app:layout_constraintStart_toEndOf="@+id/cardview_consumed_food_recipe_details_carbohydrate"
                app:layout_constraintTop_toTopOf="@+id/cardview_consumed_food_recipe_details_calorie_imge"
                app:srcCompat="@drawable/carbohydrate_icon" />

            <TextView
                android:id="@+id/cardview_consumed_food_recipe_quantity_title"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="Date"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cardview_consumed_food_recipe_details_carbohydrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:text="121"
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/cardview_consumed_food_recipe_details_fat_image"
                app:layout_constraintTop_toTopOf="@+id/cardview_consumed_food_recipe_details_fat" />

            <TextView
                android:id="@+id/cardview_consumed_food_recipe_details_fat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="121"
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/cardview_consumed_food_recipe_details_protein_image"
                app:layout_constraintTop_toTopOf="@+id/cardview_consumed_food_recipe_details_protein_image" />

            <TextView
                android:id="@+id/cardview_consumed_food_recipe_details_protein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="121"
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/cardview_consumed_food_recipe_details_calorie_imge"
                app:layout_constraintTop_toTopOf="@+id/cardview_consumed_food_recipe_details_calorie_imge" />

            <TextView
                android:id="@+id/cardview_consumed_food_calorie"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:text="121"
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintEnd_toStartOf="@+id/cardview_consumed_food_recipe_details_calorie_imge"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cardview_consumed_food_recipe_details_calorie_imge" />

            <TextView
                android:id="@+id/cardview_consumed_food_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="Quantity: 150g"
                android:textColor="@color/colorBlack"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.929"
                app:layout_constraintStart_toEndOf="@+id/cardview_consumed_food_recipe_name"
                app:layout_constraintTop_toBottomOf="@+id/cardview_consumed_food_recipe_quantity_title" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>