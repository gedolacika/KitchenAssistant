<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cardview_add_food_ingredient_in_recycler_view_ingredient_imageView"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorAccent" />

    <TextView
        android:id="@+id/cardview_add_food_ingredient_in_recycler_view_name"
        android:layout_width="171dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Name of basic food"
        app:layout_constraintStart_toEndOf="@+id/cardview_add_food_ingredient_in_recycler_view_ingredient_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cardview_add_food_ingredient_in_recycler_view_thrash"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_corner"
        android:scaleType="center"
        android:src="@drawable/icon_thresh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cardview_add_food_ingredient_in_recycler_view_protein_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/cardview_add_food_ingredient_in_recycler_view_calorie_textView"
        app:layout_constraintTop_toBottomOf="@+id/cardview_add_food_ingredient_in_recycler_view_name"
        app:srcCompat="@color/colorAccent" />

    <ImageView
        android:id="@+id/cardview_add_food_ingredient_in_recycler_view_calorie_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="center"
        app:layout_constraintStart_toEndOf="@+id/cardview_add_food_ingredient_in_recycler_view_ingredient_imageView"
        app:layout_constraintTop_toBottomOf="@+id/cardview_add_food_ingredient_in_recycler_view_name"
        app:srcCompat="@color/colorAccent" />

    <ImageView
        android:id="@+id/cardview_add_food_ingredient_in_recycler_view_fat_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/cardview_add_food_ingredient_in_recycler_view_protein_textView"
        app:layout_constraintTop_toBottomOf="@+id/cardview_add_food_ingredient_in_recycler_view_name"
        app:srcCompat="@color/colorAccent" />

    <ImageView
        android:id="@+id/cardview_add_food_ingredient_in_recycler_view_carbohydrate_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/cardview_add_food_ingredient_in_recycler_view_fat_textView"
        app:layout_constraintTop_toBottomOf="@+id/cardview_add_food_ingredient_in_recycler_view_name"
        app:srcCompat="@color/colorAccent" />

    <TextView
        android:id="@+id/cardview_add_food_ingredient_in_recycler_view_calorie_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="432"
        app:layout_constraintStart_toEndOf="@+id/cardview_add_food_ingredient_in_recycler_view_calorie_image"
        app:layout_constraintTop_toBottomOf="@+id/cardview_add_food_ingredient_in_recycler_view_name" />

    <TextView
        android:id="@+id/cardview_add_food_ingredient_in_recycler_view_protein_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="126"
        app:layout_constraintStart_toEndOf="@+id/cardview_add_food_ingredient_in_recycler_view_protein_image"
        app:layout_constraintTop_toBottomOf="@+id/cardview_add_food_ingredient_in_recycler_view_name" />

    <TextView
        android:id="@+id/cardview_add_food_ingredient_in_recycler_view_fat_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="258"
        app:layout_constraintStart_toEndOf="@+id/cardview_add_food_ingredient_in_recycler_view_fat_image"
        app:layout_constraintTop_toBottomOf="@+id/cardview_add_food_ingredient_in_recycler_view_name" />

    <TextView
        android:id="@+id/cardview_add_food_ingredient_in_recycler_view_carbohydrate_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="258"
        app:layout_constraintStart_toEndOf="@+id/cardview_add_food_ingredient_in_recycler_view_carbohydrate_image"
        app:layout_constraintTop_toBottomOf="@+id/cardview_add_food_ingredient_in_recycler_view_name" />

    <TextView
        android:id="@+id/cardview_add_food_ingredient_in_recycler_view_quantity"
        android:layout_width="53dp"
        android:layout_height="26dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:text="500 g"
        android:textColor="@color/colorBlack"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>