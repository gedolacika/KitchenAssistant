<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_food_basic_food_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/cardview_food_basic_food_layout_inner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/cardview_food_basic_food_image"
                android:layout_width="0dp"
                android:layout_height="118dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:scaleType="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@color/colorAccent" />

            <TextView
                android:id="@+id/cardview_food_basic_food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="Pepper"
                android:textColor="@color/colorDetailsScreen"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardview_food_basic_food_image" />

            <TextView
                android:id="@+id/cardview_food_basic_food_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="100 g"
                android:textColor="@color/colorDetailsScreen"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cardview_food_basic_food_name" />

            <ImageView
                android:id="@+id/fragment_food_details_calorie_imge"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="68dp"
                android:layout_marginTop="48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardview_food_basic_food_image"
                app:srcCompat="@drawable/calorie_icon" />

            <ImageView
                android:id="@+id/fragment_food_details_fat_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/fragment_food_details_fat"
                app:layout_constraintTop_toTopOf="@+id/fragment_food_details_calorie_imge"
                app:srcCompat="@drawable/fat_icon" />

            <ImageView
                android:id="@+id/fragment_food_details_protein_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/fragment_food_details_protein"
                app:layout_constraintTop_toTopOf="@+id/fragment_food_details_calorie_imge"
                app:srcCompat="@drawable/protein_icon" />

            <ImageView
                android:id="@+id/fragment_food_details_carbohydrate_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@+id/fragment_food_details_carbohydrate"
                app:layout_constraintTop_toTopOf="@+id/fragment_food_details_calorie_imge"
                app:srcCompat="@drawable/carbohydrate_icon" />

            <TextView
                android:id="@+id/fragment_food_details_carbohydrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="121"
                android:textColor="@color/colorDetailsScreen"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/fragment_food_details_fat_image"
                app:layout_constraintTop_toTopOf="@+id/fragment_food_details_fat" />

            <TextView
                android:id="@+id/fragment_food_details_fat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="121"
                android:textColor="@color/colorDetailsScreen"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/fragment_food_details_protein_image"
                app:layout_constraintTop_toTopOf="@+id/fragment_food_details_protein_image" />

            <TextView
                android:id="@+id/fragment_food_details_protein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="121"
                android:textColor="@color/colorDetailsScreen"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/fragment_food_details_calorie_imge"
                app:layout_constraintTop_toTopOf="@+id/fragment_food_details_calorie_imge" />

            <TextView
                android:id="@+id/cardview_food_basic_food_calorie"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:text="121"
                android:textColor="@color/colorDetailsScreen"
                android:textSize="20dp"
                app:layout_constraintEnd_toStartOf="@+id/fragment_food_details_calorie_imge"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/fragment_food_details_calorie_imge" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>