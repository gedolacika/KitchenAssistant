<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="92dp"
        android:text="@string/login"
        android:textColor="@color/colorBlack"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/send_the_verification_code"
        app:layout_constraintEnd_toEndOf="@+id/login_text_input_layout"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/login_text_input_layout"
        app:layout_constraintTop_toBottomOf="@+id/login_text_input_layout" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/login_text_input_layout"
        android:layout_width="334dp"
        android:layout_height="52dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_phone_number_pattern">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/login_text_input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/your_phone_number" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/login_registration_is_automatically"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/the_registration_is_automatically_at_the_first_login"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_button" />

    <TextView
        android:id="@+id/login_phone_number_pattern"
        android:layout_width="285dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="144dp"
        android:textColor="@color/colorBlack"
        android:text="@string/the_phone_number_should_follow_this_pattern_country_code_your_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_title" />
</android.support.constraint.ConstraintLayout>