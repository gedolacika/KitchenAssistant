<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_food_constarint_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/cardview_food_recommend_constraint_layout_inner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/cardview_food_image"
                android:layout_width="0dp"
                android:layout_height="112dp"
                android:scaleType="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@color/colorGray" />

            <TextView
                android:id="@+id/cardview_food_name"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="8dp"
                android:text="TextView"
                android:textColor="#000"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/cardview_food_details_calorie_imge"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="148dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/calorie_icon" />

            <ImageView
                android:id="@+id/cardview_food_details_fat_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/cardview_food_details_fat"
                app:layout_constraintTop_toTopOf="@+id/cardview_food_details_calorie_imge"
                app:srcCompat="@drawable/fat_icon" />

            <ImageView
                android:id="@+id/cardview_food_details_protein_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/cardview_food_details_protein"
                app:layout_constraintTop_toTopOf="@+id/cardview_food_details_calorie_imge"
                app:srcCompat="@drawable/protein_icon" />

            <ImageView
                android:id="@+id/cardview_food_carbohydrate_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cardview_food_details_carbohydrate"
                app:layout_constraintTop_toTopOf="@+id/cardview_food_details_calorie_imge"
                app:srcCompat="@drawable/carbohydrate_icon" />

            <TextView
                android:id="@+id/cardview_food_quantity_title"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="176dp"
                android:text="Type"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cardview_food_details_carbohydrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="121"
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/cardview_food_details_fat_image"
                app:layout_constraintTop_toTopOf="@+id/cardview_food_details_fat" />

            <TextView
                android:id="@+id/cardview_food_details_fat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="121"
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/cardview_food_details_protein_image"
                app:layout_constraintTop_toTopOf="@+id/cardview_food_details_protein_image" />

            <TextView
                android:id="@+id/cardview_food_details_protein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="121"
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/cardview_food_details_calorie_imge"
                app:layout_constraintTop_toTopOf="@+id/cardview_food_details_calorie_imge" />

            <TextView
                android:id="@+id/cardview_food_calorie_text7"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:text="121"
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintEnd_toStartOf="@+id/cardview_food_details_calorie_imge"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cardview_food_details_calorie_imge" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>